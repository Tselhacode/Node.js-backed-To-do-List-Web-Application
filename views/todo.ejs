<%- include('header.ejs')-%>
  <!-- Scriplet for control flow -->
  <div class = "box" id = "heading">
    <h1 style = "color:red"><%= listTitle %></h1>
  </div>
  <div class = "box">
      <%listItems.forEach(function(task){%>
        <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value = "<%=task._id%>" onChange="this.form.submit()">
          <p><%=task.name%></p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle%>"></input>
        </form>
      <%})%>

    <form class= "task" action="/" method="post">
      <input type="text" name="task" placeholder="add a task" autocomplete="off">
      <button type="submit" name="list" value=<%=listTitle%>>+</button>
    </form>
  </div>
<%- include('footer.ejs'); -%>
